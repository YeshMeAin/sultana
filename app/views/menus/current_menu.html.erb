<% @menu_items.group_by(&:category_name).each do |category, items| %>
  <section class="menu-section" aria-labelledby="category-<%= category.parameterize %>">
    <h2 id="category-<%= category.parameterize %>" class="menu-category-title" tabindex="0">
      <%= category %>
    </h2>
    
    <ul class="menu-items-list">
      <% items.each_with_index do |item, index| %>
        <%= render "menu_item", item: item, show_divider: index < items.size - 1 %>
      <% end %>
    </ul>
  </section>
<% end %>

