  
  <% @menu_items.group_by(&:category_name).each do |category, items| %>
    <section class="max-w-md md:max-w-lg lg:max-w-6xl mx-auto px-6 py-8 bg-white bg-opacity-90 rounded-lg shadow-lg mt-12" aria-labelledby="category-<%= category.parameterize %>">
      <h2 id="category-<%= category.parameterize %>" class="text-2xl font-semibold text-center mb-8 text-gray-800" tabindex="0">
        <%= category %>
      </h2>
      
      <ul class="space-y-6">
        <% items.each_with_index do |item, index| %>
          <li class="menu-item text-center" role="listitem">
            <div class="flex justify-center items-baseline border-b border-dotted border-gray-300 pb-1">
              <span class="text-lg font-medium ml-4 mr-4" tabindex="0"><%= number_to_currency(item.price) %></span>
              <h3 class="text-lg font-medium" tabindex="0"><%= item.item_name %></h3>
            </div>
            <p class="text-gray-600 text-sm mt-2" tabindex="0"><%= item.item_description %></p>
          </li>
          <% if index < items.size - 1 %>
            <hr class="my-4 border-t-2 border-gray-200" aria-hidden="true">
          <% end %>
        <% end %>
      </ul>
    </section>
  <% end %>
