<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <h3>Add Receipe Items</h3>
  <div id="receipe-items">
    <%= fields_for :receipes, @item.receipes.build do |receipe_form| %>
      <div class="receipe-item">
        <%= receipe_form.label :product_id, "Product" %>
        <%= receipe_form.collection_select :product_id, Product.all, :id, :name %>

        <%= receipe_form.label :quantity %>
        <%= receipe_form.number_field :quantity, step: 0.1 %>

        <%= receipe_form.label :instructions %>
        <%= receipe_form.text_area :instructions %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
