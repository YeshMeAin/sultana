<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <h2 class="text-red-700 text-sm font-medium">
        <%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:
      </h2>

      <ul class="mt-3 list-disc list-inside text-red-600">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :units, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :units, Product.units.keys.map { |unit| [unit.humanize, unit] },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :category, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :category, Product.categories.keys.map { |category| [category.humanize, category] },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="mt-8">
      <%= form.submit class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
    </div>
  </div>
<% end %>
