<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Units:</strong>
    <%= product.units %>
  </p>

  <p>
    <strong>Price per unit:</strong>
    <%= product.price_per_unit %>
  </p>

  <p>
    <strong>In bulk:</strong>
    <%= product.in_bulk %>
  </p>

</div>
