<div class="admin-dashboard">
  <h1>Admin Dashboard</h1>

  <div class="dashboard-stats">
    <div class="stat-card">
      <h3>Orders This Month</h3>
      <p class="stat-number"><%= @orders_count_this_month %></p>
    </div>
    <div class="stat-card">
      <h3>Average Order Value</h3>
      <p class="stat-number"><%= number_to_currency(@average_order_value) %></p>
    </div>
    <div class="stat-card">
      <h3>Revenue This Month</h3>
      <p class="stat-number"><%= number_to_currency(@payed_this_month) %></p>
    </div>
  </div>

  <div class="dashboard-actions">
    <h2>Quick Actions</h2>
    <div class="action-buttons">
      <a href="#" class="btn btn-primary">Manage Users</a>
      <a href="#" class="btn btn-info">View Orders</a>
      <a href="#" class="btn btn-success">Add Product</a>
      <a href="#" class="btn btn-warning">Generate Reports</a>
    </div>
  </div>
</div>
