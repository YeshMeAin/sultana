<div class="nested-fields" data-new-record="<%= f.object.new_record? %>">
  <div class="menu-item-fields">
    <%= f.label :menu_item_id, "Item" %>
    <%= f.collection_select :menu_item_id, @available_menu_items, :id, :name %>

    <%= f.label :quantity %>
    <%= f.number_field :quantity, step: 0.5 %>

    <%= f.hidden_field :_destroy %>
    
    <%= button_tag type: 'button',
                   data: { action: "click->nested-form#remove" },
                   class: 'btn btn-danger' do %>
      Remove
    <% end %>
  </div>
</div> 