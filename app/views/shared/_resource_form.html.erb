<%= form_with(model: resource, data: { controller: "resource-form" }) do |form| %>
  <div class="mb-6">
    <button data-action="click->modal#close" class="absolute top-4 right-4 text-gray-400 hover:text-gray-500">
      <span class="sr-only">Close</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  
  <%= render "#{resource_name.downcase.pluralize}/form", { "#{resource_name.downcase}": resource, form: form } %>
<% end %>
