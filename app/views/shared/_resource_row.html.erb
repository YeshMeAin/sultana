<tr class="resource-row">
  <% resource_class.table_attributes.each do |attr| %>
    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= resource.send(attr) %></td>
  <% end %>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <%= link_to "View",
                resource_path(resource),
                class: "text-indigo-600 hover:text-indigo-900",
                data: {
                  action: "resource-table#openShowModal",
                  resource_id: resource.id
                } %>
    <%= link_to "Edit",
                edit_resource_path(resource),
                class: "ml-4 text-indigo-600 hover:text-indigo-900",
                data: {
                  action: "resource-table#openEditModal",
                  resource_id: resource.id
                } %>
    <%= button_to "Delete",
                resource_path(resource),
                method: :delete,
                class: "ml-4 text-red-600 hover:text-red-900",
                form: { 
                  data: { 
                    turbo_confirm: "Are you sure you want to delete this #{@resource_name}?",
                    turbo_frame: "_top"
                  }
                } %>
  </td>
</tr>